#!/bin/sh

MAIL=/home/pj/var/mail/box/inbox

wall "$SMARTD_MESSAGE"

echo "From root $(date)
From: root@node
To: pierrejean.fichet@posteo.net
Subject: Smartd error
Message-ID: <$(date '+%Y%m%d%H%M%S')@localhost.localdomain>
Date: $(date -R)
User-Agent: smartmail


Error type:          $SMARTD_FAILTYPE
Device node:         $SMARTD_DEVICESTRING
Date occurred:       $SMARTD_TFIRST
Below is the full original message generated by smartd:
-------------------------------------------------------
$SMARTD_MESSAGE
-------------------------------------------------------


" >> $MAIL
