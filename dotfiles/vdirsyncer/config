# general configuration
[general]
status_path = "~/.local/share/vdirsyncer/"

### Adress books
[pair cards]
a = "cards_local"
b = "cards_remote"
collections = ["from a", "from b"]

[storage cards_local]
type = "filesystem"
path = "~/var/dav/card"
fileext = ".vcf"

[storage cards_remote]
type = "carddav"
url = "https://posteo.de:8843"
username = "@email@"
password.fetch = ["command", "pass", "mail/posteo.net"]

### Calendars
[pair cals]
a = "cals_local"
b = "cals_remote"
collections = [["bnb", "bnb", "lgqzjn"], "default"]

[storage cals_local]
type = "filesystem"
path = "~/var/dav/cal"
fileext = ".ics"

[storage cals_remote]
type = "caldav"
url = "https://posteo.de:8843"
username = "@email@"
password.fetch = ["command", "pass", "mail/posteo.net"]

[pair airbnb]
a = "airbnb_remote"
b = "airbnb_local"
collections = null
partial_sync = "revert"

[storage airbnb_local]
type = "filesystem"
path = "~/var/dav/cal/airbnb"
fileext = ".ics"

[storage airbnb_remote]
type = "http"
